<Window x:Class="KotKalkulatorWalut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KotKalkulatorWalut"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.RowDefinitions>
        <!-- naglowek -->
        <RowDefinition Height="auto"/>
        <!-- kwota -->
        <RowDefinition Height="auto"/>
        <!-- z jakiej waluty -->
        <RowDefinition Height="auto"/>
        <!-- na jaka walute -->
        <RowDefinition Height="auto"/>
        <!-- przycisk -->
        <RowDefinition Height="auto"/>
        <!-- wyswietlanie -->
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <!-- lewa -->
        <ColumnDefinition Width="100"/>
        <!-- prawa -->
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- kwota -->
    <Label Content="kwota: " Grid.Row="1" Grid.Column="0"/>
    <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="kwotaTextbox"/>

    <!-- z waluty -->
    <Label Content="z waluty: " Grid.Row="2" Grid.Column="0"/>
    <ComboBox Grid.Row="2" Grid.Column="2" Margin="5"  x:Name="zWaluty">
        <ComboBoxItem Content="PLN" IsSelected="True"/>
        <ComboBoxItem Content="EUR"/>
        <ComboBoxItem Content="USD"/>
    </ComboBox>

    <!-- na walute -->
    <Label Content="na Walute: " Grid.Row="3" Grid.Column="0"/>
    <ComboBox Grid.Row="3" Grid.Column="2" Margin="5" x:Name="naWalute">
        <ComboBoxItem Content="PLN" IsSelected="True"/>
        <ComboBoxItem Content="EUR"/>
        <ComboBoxItem Content="USD"/>
    </ComboBox>
    <!-- przycisk -->
    <Button Grid.Row="4" Grid.Column="1" 
            Name="countbtn" Content="Przelicz" Margin="5,15" 
            Padding="15,5" Foreground="Black" Click="countbtn_Click_1"/>
    
    <!-- wyswietlanie -->
    <Label Name="labelW" Content="Wynik:" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
           FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" 
           FontWeight="Bold"/>
</Grid>
</Window>
