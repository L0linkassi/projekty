<Window x:Class="rejestracja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rejestracja"
        mc:Ignorable="d"
        Title="Formularz Rejestrracyjny Studenta" Height="450" Width="400">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <!-- Nagłówek -->
            <RowDefinition Height="Auto"/>
            <!-- Imie -->
            <RowDefinition Height="Auto"/>
            <!-- Nazwisko -->
            <RowDefinition Height="Auto"/>
            <!-- Data urodzenia -->
            <RowDefinition Height="Auto"/>
            <!-- Kierunek -->
            <RowDefinition Height="Auto"/>
            <!-- Zgody -->
            <RowDefinition Height="Auto"/>
            <!-- Przerwa -->
            <RowDefinition Height="*"/>
            <!-- Przyciski -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Lewa Strona -->
            <ColumnDefinition Width="100"/>
            <!-- Prawa strona -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Etykieta tytul -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Rejestracja Studenta"  Margin="0,0,0,20"  FontWeight="Bold" HorizontalAlignment="Center" FontSize="22"/>
        <!-- Imie -->
        <Label Content="Imię: " Grid.Row="1" Grid.Column="0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Name="FirstNameTextbox"/>
        <!-- Nazwisko -->
        <Label Content="Nazwisko: " Grid.Row="2" Grid.Column="0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5" Name="LastNameTextbox"/>
        <!-- Data urodzenia -->
        <Label Content="Data urodzenia: " Grid.Row="3" Grid.Column="0"/>
        <DatePicker Grid.Row="3" Grid.Column="1" Margin="5" Name="BirthDatepicker"/>
        <!-- Kierunek -->
        <Label Content="Kierunek: " Grid.Row="4" Grid.Column="0"/>
        <ComboBox Grid.Row="4" Grid.Column="2" Margin="5" Name="fieldOfStudies">
            <ComboBoxItem Content="Informatyka"/>
            <ComboBoxItem Content="Gender studies"/>
            <ComboBoxItem Content="Kongniwistyka"/>
            <ComboBoxItem Content="Fizyka i astronomia"/>
        </ComboBox>
        <!-- ZGODY -->
        <Label Grid.Row="5" Grid.Column="0" Content="Zgody"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Margin="5">
            <CheckBox Name="EULAcheckbox"  Content="Akceptuje Regulamin"/>
            <CheckBox Name="Newsletter"  Content="Zapisz na newsletter"/>
        </StackPanel>
        
        <!-- Przyciski -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="Addbtn" Content="Dodaj" Margin="5" Padding="15,5" Background="Green" Foreground="White" Click="Addbtn_Click"/>
            <Button Name="Clearbtn" Content="Wyczysc" Margin="5" Padding="15,5" Background="Red" Foreground="White" Click="Clearbtn_Click"/>
            <Button Name="Savebtn" Content="Wyślij" Margin="5" Padding="15,5" Background="DeepSkyBlue" Foreground="White" Click="Savebtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
